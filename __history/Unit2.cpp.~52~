#include <DUnitX.TestFramework.hpp>
#include <stdio.h>
#include "Unit1.h"
#include "Unit1.cpp"
#include "Unit1.dfm"

#pragma option --xrtti

class __declspec(delphirtti) TMyTestObject : public TObject
{
public:
  virtual void __fastcall SetUp();
  virtual void __fastcall TearDown();

__published:
  void __fastcall TestAjoutUtilisateur();
  void __fastcall Test2();
};


void __fastcall TMyTestObject::SetUp()
{
	app = new TForm1();
}

void __fastcall TMyTestObject::TearDown()
{
	delete app;
}

void __fastcall TMyTestObject::TestAjoutUtilisateur()
{
  // TODO
  String s("Hello");
  Dunitx::Testframework::Assert::IsTrue(s == "Hello");
}

void __fastcall TMyTestObject::Test2()
{
  // TODO
  String s("Hello");
  Dunitx::Testframework::Assert::IsTrue(s == "Bonjour"); // This fails for illustrative purposes
}

static void registerTests()
{
  TDUnitX::RegisterTestFixture(__classid(TMyTestObject));
}
#pragma startup registerTests 33