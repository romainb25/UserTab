}
//---------------------------------------------------------------------------
void __fastcall TMyTestObject::TestAjoutUtilisateur()
{
  // TODO
  TForm app = new TForm1();
  int res=1;
  int resultat=0;
  resultat=app->ajouterUtilisateur("test","testpass");
  Dunitx::Testframework::Assert::IsTrue(res == resultat);
